@model List<JobPortal.Data.Entities.Category>

<div class="row">
    @foreach (var category in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="single-feature">
                <h4>@category.Name</h4>
                <hr />
                <p>@category.Description</p>
            </div>
        </div>
    }
</div>