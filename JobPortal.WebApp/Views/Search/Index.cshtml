@model IEnumerable<JobPortal.Data.Entities.Job>
@using X.PagedList;
@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;

@{
    Layout = "_Layout";
}

<style>
    .pagination {
        list-style-type: none;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
    }
    
    .pagination li {
        margin: 0 5px;
    }

    .pagination li a {
        display: inline-block;
        padding: 5px 10px;
        border: 1px solid #ccc;
        color: #333;
        text-decoration: none;
        border-radius: 5px;
    }

    .pagination li.active a {
        background-color: #333;
        color: #fff;
    }
</style>

<!-- Start banner Area -->
<section class="banner-area relative" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row search-page-top d-flex align-items-center justify-content-center">
            <div class="banner-content col-lg-12">
                <h1 class="text-white">
                    Search Results
                </h1>
                <p class="text-white link-nav">
                    <a href="/">Home </a> <span class="lnr lnr-arrow-right"></span> <a href="#"> Job searching page</a>
                </p>
                <!--Search box-->
                @Html.Partial("../Shared/_SearchBoxPartial.cshtml")
                @if (ViewBag.q == null && ViewBag.province == null && ViewBag.skill == null)
                {
                    <p style="font-size: 20px" class="text-white"><span>@Model.Count()+</span> IT Jobs For <span> Developers</span></p>
                }
                else
                {
                    <p style="font-size: 25px; display: inline;" class="text-white">
                        <span>@Model.Count()</span> Results found for <span>"@ViewBag.q"</span>
                    </p>
                    @if (ViewBag.province != null)
                    {
                        <p style="font-size: 25px; display: inline;" class="text-white">in <span>@(ViewBag.province != null ? $"{ViewBag.province.Name}" : "")</span></p>
                    }
                    @if (ViewBag.skill != null)
                    {
                        <p style="font-size: 25px; display: inline;" class="text-white">for <span>@(ViewBag.skill != null ? $"{ViewBag.skill.Name}" : "")</span></p>
                    }
                }
            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->
<!-- Start post Area -->
<section class="post-area section-gap">
    <div class="container">
        <div class="row justify-content-center d-flex">
            <div class="col-lg-8 post-list">
                
                <!-- Time view component -->
                <vc:time></vc:time>

                <!--Job list-->
                @if (Model.Any())
                {
                    @foreach (var job in Model)
                    {
                        <div class="single-post d-flex flex-row">
                            <!--Job skill list-->
                            <div class="thumb" style="align-items:center">
                                <img href="/job/@job.Slug" style="border-radius:10px" width="150" height="75" src="https://localhost:7211/images/employers/@job.AppUser.UrlAvatar" alt="EMPLOYER IMAGE">
                                <ul class="tags" style="justify-content:center; display: grid; border-radius:10px">
                                    <!--Skill-->
                                    <li style="border-radius:10px">
                                        <a href="/job?slug=@job.Skill.Slug">@job.Skill.Name</a>
                                    </li>
                                </ul>
                            </div>
                            <!--End job skill list-->
                            <div class="details" style="margin-left:20px; width:600px;">
                                <div class="title d-flex flex-row justify-content-between">
                                    <div class="titles">
                                        <a href="/job/@job.Slug"><h4>@job.Name</h4></a>
                                        <h5>From: @job.AppUser.FullName</h5>
                                        <strong><a style="color: black">@job.Province.Name</a></strong>
                                    </div>
                                    <div class="ml-auto">
                                        <ul class="btns">
                                            <li style="border-radius:10px"><a href="/job/@job.Slug">Apply now</a></li>
                                        </ul>
                                    </div>
                                </div>
                                <hr>
                                <p>@Html.Raw(job.Introduce)</p>
                                <h5>Job Nature: @job.Time.Name</h5>
                                <p class="address"><span class="lnr lnr-map"></span> @job.Title.Name</p>
                                <p class="address"><span class="lnr lnr-database"></span> $@job.MinSalary - $@job.MaxSalary</p>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center" style="margin-top: 50px;">
                        <img src="~/images/default/oops.png" alt="oops robot" width="600" height="400" style="margin-bottom: 10px; border-radius:10px">
                        <h4>Oops! The job you're looking for doesn't exist.</h4>
                    </div>
                }
                <!--End job list-->

                <!--Page list-->
                <div class="text-center">
                    <ul class="pagination">
                        @Html.PagedListPager((IPagedList)Model, page =>
                        Url.Action("Index", new { page }),
                        new PagedListRenderOptions
                        {
                        Display = PagedListDisplayMode.IfNeeded,
                        LiElementClasses = new string[] { "page-item" },
                        UlElementClasses = new string[] { "pagination" },
                        PageClasses = new string[] { "page-link" },
                        MaximumPageNumbersToDisplay = 7, // Maximum number of pages displayed
                        LinkToPreviousPageFormat = "<span aria-hidden=\"true\">&lsaquo;</span>",
                        LinkToNextPageFormat = "<span aria-hidden=\"true\">&rsaquo;</span>",
                        LinkToFirstPageFormat = "<span aria-hidden=\"true\">&lsaquo;&lsaquo;</span>",
                        LinkToLastPageFormat = "<span aria-hidden=\"true\">&rsaquo;&rsaquo;</span>"
                        })
                    </ul>
                </div>

            </div>
            <div class="col-lg-4 sidebar">
                <!-- Jobs -->
                <div class="single-slidebar">
                    <h4 class="text-center">Top rated job posts</h4>
                    <div class="active-relatedjob-carusel">
                        @foreach (var job in ViewBag.ListJobs)
                        {
                            <div class="single-rated">
                                <img href="/job/@job.Slug" style="width: 400px; height: 150px; margin: 0 auto;" src="https://localhost:7211/images/employers/@job.AppUser.UrlAvatar" alt="job image">
                                <br />
                                <a href="/job/@job.Slug"><h4 class="text-center">@job.Name</h4></a>
                                <strong><h6 class="text-center" style="color: black">@job.Province.Name</h6></strong>
                                <p>@Html.Raw(job.Introduce)</p>
                                <h5>Job Nature: @job.Time.Name</h5>
                                <p class="address"><span class="lnr lnr-map"></span> @job.Title.Name</p>
                                <p class="address"><span class="lnr lnr-database"></span> @job.MinSalary - @job.MaxSalary</p>
                                <a href="/job/@job.Slug" style="display: flex; justify-content: center;" class="btns text-uppercase">View job</a>
                            </div>
                        }
                    </div>
                </div>
                <!-- Blogs -->
                <div class="single-slidebar">
                    <h4 class="text-center">Carrer Advice Blog</h4>
                    <div class="blog-list">
                        <div class="single-blog " style="background:#000 url(../assets/user/img/blog1.jpg);">
                            <a href="#">
                                <h4>
                                    Home Audio Recording <br>
                                    For Everyone
                                </h4>
                            </a>
                            <div class="meta justify-content-between d-flex">
                                <p>
                                    02 Hours ago
                                </p>
                                <p>
                                    <span class="lnr lnr-heart"></span>
                                    06
                                    <span class="lnr lnr-bubble"></span>
                                    02
                                </p>
                            </div>
                        </div>
                        <div class="single-blog " style="background:#000 url(../assets/user/img/blog2.jpg);">
                            <a href="#">
                                <h4>
                                    Home Audio Recording <br>
                                    For Everyone
                                </h4>
                            </a>
                            <div class="meta justify-content-between d-flex">
                                <p>
                                    02 Hours ago
                                </p>
                                <p>
                                    <span class="lnr lnr-heart"></span>
                                    06
                                    <span class="lnr lnr-bubble"></span>
                                    02
                                </p>
                            </div>
                        </div>
                        <div class="single-blog " style="background:#000 url(../assets/user/img/blog1.jpg);">
                            <a href="#">
                                <h4>
                                    Home Audio Recording <br>
                                    For Everyone
                                </h4>
                            </a>
                            <div class="meta justify-content-between d-flex">
                                <p>
                                    02 Hours ago
                                </p>
                                <p>
                                    <span class="lnr lnr-heart"></span>
                                    06
                                    <span class="lnr lnr-bubble"></span>
                                    02
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
