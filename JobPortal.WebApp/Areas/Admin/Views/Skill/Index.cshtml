@model IEnumerable<JobPortal.Data.Entities.Skill>

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <h1 style="text-align:center">Table of skill</h1>
            <div class="card">
                <div class="card-body">
                    <form asp-action="DeleteSelected" method="post">
                        <div class="d-flex justify-content-between mb-3">
                            <a asp-action="Create" class="btn btn-primary">Create New</a>
                            <input type="submit" class="btn btn-danger" value="Delete Selected" onclick="return confirm('Confirm deletion of the selected sections?')" />
                        </div>
                        @section Scripts {
                            <script>
                                $(function () {
                                    $('#checkall').change(function () {
                                        if ($(this).prop("checked") == true) {
                                            $("input[name=listDelete]").prop("checked", true);
                                        } else {
                                            $("input[name=listDelete]").prop("checked", false);
                                        }
                                    });
                                });
                            </script>
                        }
                            <div class="table-responsive text-nowrap">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>
                                                <input type="checkbox" id="checkall" />
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Name)
                                            </th>

                                            <th>
                                                Actions
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    @foreach (var skill in Model)
                                    {
                                        <tr>
                                            <td>
                                                <input type="checkbox" name="listDelete" value="@skill.Id" />
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => skill.Name)
                                            </td>
                                           
                                            <td>
                                                <div class="dropdown">
                                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                                        <i class="bx bx-list-ul"></i>
                                                    </button>
                                                    <div class="dropdown-menu">
                                                        <a class="dropdown-item update-button" href="/admin/skill/update/@skill.Id">
                                                            <i class="bx bx-edit me-1"></i> Update
                                                        </a>
                                                        <button class="dropdown-item delete-button" type="button" onclick="deleteItem(@skill.Id)">
                                                            <i class="bx bx-trash me-1"></i> Delete
                                                        </button>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    input.btn.btn-danger {
        position: absolute;
        right: 25px;
        top: 25px;
    }

    th {
        font-weight: 700 !important;
    }

    .dropdown-item.update-button {
        background: transparent;
        border: none;
        font-weight: 700;
        color: forestgreen;
    }

        .dropdown-item.update-button:hover {
            background: transparent;
            color: forestgreen;
        }

    .dropdown-item.delete-button {
        background: transparent;
        border: none;
        font-weight: 700;
        color: #dc3545;
    }

        .dropdown-item.delete-button:hover {
            background: transparent;
            color: #dc3545;
        }
</style>

<script>
    function deleteItem(id) {
        Swal.fire({
            title: 'Delete this skill?',
            text: "Are you sure to delete the skill?",
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Delete'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '/admin/skill/delete/' + id;
                Swal.fire(
                    'Deleted!',
                    '',
                    'success'
                );
            }
        });
    }
</script>