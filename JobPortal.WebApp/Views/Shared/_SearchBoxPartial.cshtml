<!--Search area-->
<form class="serach-form-area" method="get" asp-controller="Search" asp-action="Index">
    <div class="row justify-content-center form-wrap">
        <div class="col-xs-18 col-7 form-cols">
            <label for="inputPassword2" class="sr-only">Password</label>
            <input type="text" class="form-control" id="inputPassword2" placeholder="what are you looking for ?" name="q" value="@if (ViewBag.q != null)
            {<text>@ViewBag.q</text>}">
            <input type="hidden" name="catelog" value="@if (ViewBag.Category != null)
            {<text>@ViewBag.Category.Slug</text>}">
        </div>
        <div class="col-xs-18 col-3 form-cols">
            <button type="submit" class="btn btn-info" style="margin-left: -2rem;">
                <span class="lnr lnr-magnifier"></span> Search
            </button>
        </div>
    </div>
</form>