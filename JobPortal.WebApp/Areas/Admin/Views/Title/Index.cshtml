@model IEnumerable<JobPortal.Data.Entities.Title>

@{
    ViewData["Title"] = "Title";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <p class="card-description">
                        <a class="btn btn-primary" href="/admin/title/create">Add new title</a>
                    </p>
                    @*<form asp-action="Index" method="get" class="form-inline">
                        <div class="form-group mx-sm-3 mb-2">
                            <input type="text" class="form-control" name="q" style="height: 2.3rem!important;">
                        </div>
                        <button type="submit" class="btn btn-primary mb-2">Filter</button>
                    </form>*@
                    <form asp-action="DeleteSelected" method="post">
                        <input type="submit" class="btn btn-danger" value="Delete Selected" onclick="return confirm('Confirm deletion of the selected sections ?') " />
                        @section Scripts {
                            <script>
                                $(function () {
                                    $('#checkall').change(function () {
                                        if ($(this).prop("checked") == true) {
                                            $("input[name=listDelete]").prop("checked", true);
                                        } else {
                                            $("input[name=listDelete]").prop("checked", false);
                                        }
                                    });
                                });
                            </script>
                        }
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>
                                            <input type="checkbox" id="checkall" />
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var title in Model)
                                    {
                                        <tr>
                                            <td>
                                                <input type="checkbox" name="listDelete" value="@title.Id" />
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelTitle => title.Name)
                                            </td>
                                            <td>
                                                <div class="dropdown">
                                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                                        <i class="bx bx-list-ul"></i>
                                                    </button>
                                                    <div class="dropdown-menu">
                                                        <a class="dropdown-item" href="/admin/title/update/@title.Id">
                                                            <i class="bx bx-edit-alt me-1"></i> Update</a>
                                                        <button class="dropdown-item delete-button" type="button" onclick="deleteItem(@title.Id)">
                                                            <i class="bx bx-trash me-1"></i> Delete</button>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    input.btn.btn-danger {
        position: absolute;
        right: 25px;
        top: 25px;
    }

    th {
        font-weight: 700 !important;
    }

    .dropdown-item.delete-button {
        background: transparent;
        border: none;
        font-weight: 700;
        color: #dc3545;
    }

        .dropdown-item.delete-button:hover {
            background: transparent;
            color: #dc3545;
        }
</style>

<script>
    function deleteItem(id) {
        Swal.fire({
            title: 'Delete this title?',
            text: "Are you sure to delete the title?",
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Delete!'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '/admin/title/delete/' + id;
                Swal.fire(
                    'Delete success!',
                    '',
                    'success'
                );
            }
        });
    }
</script>