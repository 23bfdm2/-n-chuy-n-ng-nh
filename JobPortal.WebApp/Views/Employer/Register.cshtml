@model JobPortal.Data.Entities.AppUser

@{
    Layout = "_Layout";
}
<script src="//cdn.ckeditor.com/4.21.0/standard/ckeditor.js"></script>
<!-- Start banner Area -->
<section class="banner-area relative" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    <span>Want to be an employer ?</span>
                </h1>
                <p class="text-white"><a href="/">Home </a>  <span class="lnr lnr-arrow-right"></span>  <a href="#"> Register now !</a></p>
            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->
<!-- Start contact-page Area -->
<section class="contact-page-area section-gap">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 style="text-align: center" class="card-title">Application for approval to become an employer</h4>
                        <br />
                        <div class="col-md-4i">
                            <form asp-action="Register" enctype="multipart/form-data" id="form">
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="form-group">
                                            <label asp-for="FullName" class="control-label"></label><span class="text-danger">*</span>
                                            <input asp-for="FullName" class="form-control" />
                                            <span asp-validation-for="FullName" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Contact" class="control-label"></label><span class="text-danger">*</span>
                                            <textarea asp-for="Contact" class="form-control" rows="3"></textarea>
                                            <span asp-validation-for="Contact" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Description" class="control-label"></label><span class="text-danger">*</span>
                                            <textarea asp-for="Description" class="form-control" id="editor1" style="height: 450px"></textarea>
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label asp-for="UrlAvatar" class="control-label"></label><span class="text-danger">*</span>
                                            <input type="file" asp-for="UrlAvatar" class="form-control" accept="image/*" id="imgInp" />
                                            <span asp-validation-for="UrlAvatar" class="text-danger"></span>
                                            <img id="blah" src="#" alt="your image" style="width: 335px;" />
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Location" class="control-label"></label><span class="text-danger">*</span>
                                            <input asp-for="Location" class="form-control" />
                                            <span asp-validation-for="Location" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="WebsiteURL" class="control-label"></label><span class="text-danger">*</span>
                                            <input asp-for="WebsiteURL" class="form-control" />
                                            <span asp-validation-for="WebsiteURL" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" onclick="onConfirm()" value="Create" class="btn btn-primary" />
                                        </div>
                                    </div>
                                </div>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End contact-page Area -->

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        imgInp.onchange = evt => {
      const [file] = imgInp.files
      if (file) {
        blah.src = URL.createObjectURL(file)
      }
    }
    </script>

    <script>
      var quill = new Quill('#editor', {
        theme: 'snow'
      });
    </script>

    <script>
        function onConfirm() {
            Swal.fire({
              title: 'Register to employer?',
              text: "Are you sure you want to apply as an employer?y?",
              showCancelButton: true,
              confirmButtonColor: '#3085d6',
              cancelButtonColor: '#d33',
              confirmButtonText: 'Confirm!'
            }).then((result) => {
              if (result.isConfirmed) {
                  $("#form").submit();
                Swal.fire(
                  'Success!',
                  '',
                  'success'
                )
              } 
            })
        }
    </script>

    <script>CKEDITOR.replace('editor1');</script>
}