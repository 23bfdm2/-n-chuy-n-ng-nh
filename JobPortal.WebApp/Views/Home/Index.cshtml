@model IEnumerable<JobPortal.Data.Entities.Job>

@{
    Layout = "_Layout";
}

<!-- Start banner Area -->
<section class="banner-area relative" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row search-page-top d-flex align-items-center justify-content-center">
            <div class="banner-content col-lg-12">
                <h1 class="text-white">
                    <span>@Model.Count()+</span> Jobs posted last week
                </h1>
                <!--Search box-->
                @Html.Partial("../Shared/_SearchBoxPartial.cshtml")
                <p style="font-size: 20px" class="text-white"> <span>Search by tags:</span> Developer, Engineer, Technology, Support, Manager, Senior, Junior</p>
            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->
<!--Category-->
<!-- Start features Area -->
<section class="features-area">
    <div class="container">
        <div class="row">
            <!--Category-->
            @foreach (var cate in ViewBag.RandomCategories)
            {
                <div class="col-lg-3 col-md-6">
                    <div class="single-feature">
                        <h4>@cate.Name</h4>
                        <hr />
                        <p>@cate.Description</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!--Job model-->
<!-- Start popular-post Area -->
<section class="popular-post-area pt-100">
    <div class="container">
        <div class="row align-items-center">
            <div class="active-popular-post-carusel">
                @foreach (var job in ViewBag.RandomJobs)
                {
                    <div class="single-popular-post d-flex flex-row">
                        <div class="thumb">
                            <img href="/job/@job.Slug" class="img-fluid" src="https://localhost:7211/images/employers/@job.AppUser.UrlAvatar" alt="JOB IMAGE" height="70" width="70">
                            <a class="btns text-uppercase" href="/job/@job.Slug">View job</a>
                        </div>
                        <div class="details">
                            <a href="/job/@job.Slug"><h4>@job.Name</h4></a>
                            <h6>@job.Province.Name</h6>
                            <p>@Html.Raw(job.Description)</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!--Skill categories-->
<!-- Start feature-cat Area -->
<section class="feature-cat-area pt-100" id="category">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="menu-content pb-60 col-lg-10">
                <div class="title text-center">
                    <h1 class="mb-10">Featured Skill Categories</h1>
                    <p>Who are in extremely love with eco friendly system.</p>
                </div>
            </div>
        </div>
        <div class="row">
            <!--6-->
            @foreach (var skill in ViewBag.RandomSkills)
            {
                <div class="col-lg-2 col-md-4 col-sm-6">
                    <div class="single-fcat">
                        <a href="/job?slug=@skill.Slug">
                            <img height="70" width="80" src="https://localhost:7211/images/skills/@skill.Logo" alt="">
                        </a>
                        <hr />
                        <a href="/job?slug=@skill.Slug">@skill.Name</a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Start Top Employer -->
<section class="feature-cat-area pt-100" id="category">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="menu-content pb-30 col-lg-10">
                <div class="title text-center">
                    <h1 class="mb-10">TOP EMPLOYERS</h1>
                    <p>Recommend top employers</p>
                </div>
            </div>
        </div>
        <div class="row">
            <!--4-->
            @foreach (var emp in ViewBag.RandomEmployers)
            {
                <div class='col-xs-16 col-3'>
                    <a href="/job?slug=@emp.Slug">
                        <div class="card">
                            <img class="card-img card-img-top" src="https://localhost:7211/images/employers/@emp.UrlAvatar" alt="EMPLOYER IMAGE" height='250' width='150'>
                            <div class='card-body'>
                                <h4 class='card-title text-center'>@emp.FullName</h4>
                                <hr />
                                <footer class='card-text text-center'>
                                    <span>
                                        <span> @emp.WebsiteURL </span>
                                        <span>&nbsp;-&nbsp;</span>
                                    </span>
                                    <span>@emp.Province.Name</span>
                                </footer>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>
<br />
<br />
<br />
<!-- Start callto-action Area -->
<section class="callto-action-area section-gap" id="join">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="menu-content col-lg-9">
                <div class="title text-center">
                    <h1 class="mb-10 text-white">Join us today without any hesitation</h1>
                    <p class="text-white">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore  et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation.</p>
                    <a class="primary-btn" href="#">I am a Candidate</a>
                    <a class="primary-btn" href="#">Request Free Demo</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End calto-action Area -->
<!-- Start download Area -->
<section class="download-area section-gap" id="app">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 download-left">
                <img src="../assets/user/img/d1.png" alt="">
            </div>
            <div class="col-lg-6 download-right">
                <h1>
                    Download the <br>
                    Job Listing App Today!
                </h1>
                <p class="subs">
                    It won’t be a bigger problem to find one video game lover in your neighbor. Since the introduction of Virtual Game, it has been achieving great heights so far as its popularity and technological advancement are concerned.
                </p>
                <div class="d-flex flex-row">
                    <div class="buttons">
                        <i class="fa fa-apple" aria-hidden="true"></i>
                        <div class="desc">
                            <a href="#">
                                <p>
                                    <span>Available</span> <br>
                                    on App Store
                                </p>
                            </a>
                        </div>
                    </div>
                    <div class="buttons">
                        <i class="fa fa-android" aria-hidden="true"></i>
                        <div class="desc">
                            <a href="#">
                                <p>
                                    <span>Available</span> <br>
                                    on Play Store
                                </p>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End download Area -->